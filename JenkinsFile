pipeline {
	agent any
	stages {
		stage ("Git") {
			steps {
				git branch: 'main',
				credentialsId: 'JenkinsSSH',
				url: 'https://github.com/CyrilGuissard/JenkinsCodeTest.git'
			}
		}
		stage ("Bandit Test") {
			steps {
				sh 'bandit -r $PWD > $WORKSPACE/reports/factorial.txt'
			}
		}
		stage ("Slscan Test") {
			steps {
				sh 'sudo docker run --rm -e "WORKSPACE=${PWD}" -v "$PWD:/app" shiftleft/sast-scan scan --src /app --type python'
			}
		}
	}
}
